<p id="notice"><%= notice %></p>

<h1>Vehicles</h1>
<div class="row">
  <% @vehicles.each do |vehicle| %>
      <div class="card col-md-4 mb-4 mr-4 mx-auto" style="width: 18rem;">
        <%= link_to(vehicle) do %>
          <%vehicle_pic = vehicle.photo.url || "motocar.png"%>
          <%= image_tag vehicle_pic, size:300, class:"card-img-top", alt:"Card image cap"%>
        <%end%>
        <div class="card-body">
          <h5 class="card-title"><%=vehicle.kind_of_vehicle%></h5>
          <p class="card-text"><%=vehicle.description%></p>
          <h6 class="card-text alert alert-light"><%=vehicle.price_hour%>â‚¬</h6>
          <div class="btn-group btn-group-toggle" data-toggle="buttons">
            <label>
              <%= link_to 'Show', vehicle, class:"btn btn-secondary active", method: :get %>
            </label>
              <%if current_user == vehicle.user%>
                <label>
                  <%= link_to 'Edit', edit_vehicle_path(vehicle), class:"btn btn-secondary active", method: :get %>
                </label>
                <label>
                  <%= link_to 'Destroy', vehicle, class:"btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
                </label>
            <% end %>
        </div>
        </div>
        <div class="card-footer text-muted">
        <%user_pic = vehicle.user.photo.url || "srxcuadrado.png"%>
        <%=image_tag user_pic, size:40 %><%=  vehicle.user.name%>
        </div>
      </div>
  <%end%>
</div>


<table>
  <thead>
    <tr>
      <th>Kind of vehicle</th>
      <th>Description</th>
      <th>Price hour</th>
      <th>Photo</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vehicles.each do |vehicle| %>
      <tr>
        <td><%= vehicle.kind_of_vehicle %></td>
        <td><%= vehicle.description %></td>
        <td><%= vehicle.price_hour %></td>
        <td><%= image_tag vehicle.photo.url, size:300 if vehicle.photo.url %></td>
        <td><%= vehicle.user.name %></td>
        <td><%= link_to 'Show', vehicle %></td>
        <%if current_user == vehicle.user%>
          <td><%= link_to 'Edit', edit_vehicle_path(vehicle) %></td>
          <td><%= link_to 'Destroy', vehicle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

