<table class="table">
 <thead>
   <tr class="table-active">
        <th>User</th>
        <th>Kind of vehicle</th>
        <th>Message</th>
        <th>Detail</th>
        <th>Date</th>
        <th>Photo</th>
        <th colspan="3"></th>
   </tr>
 </thead>
 <tbody>
    <%@user.vehicles.each do |vehicle|%>
    <%vehicle.agreements.each do |agreement|%>
    <tr class="table-secondary">
       <td class="bg-primary"><%= agreement.user.name %></td>
       <td class="bg-success"><%= agreement.vehicle.kind_of_vehicle %></td>
       <td class="bg-warning"><%= agreement.message %></td>
       <td class="bg-danger"><%= agreement.detail %></td>
       <td class="bg-info"><%= agreement.date.strftime("%d-%m-%Y") %></td>
       <td><%= image_tag vehicle.photo.url, size:30 if vehicle.photo.url %></td>
       
       <td><%= link_to 'Show', vehicle %></td>
       
       <%if current_user == vehicle.user%>
         <td><%= link_to 'Edit', edit_vehicle_path(vehicle) %></td>
         <td><%= link_to 'Destroy', destroy_agreement_path(id: agreement.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
       <% end %>
    </tr>
        
    <%end%>  
<%end%>
</tbody>
</table>