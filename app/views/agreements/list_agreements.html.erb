<table>
 <thead>
   <tr>
        <th>User</th>
        <th>Kind of vehicle</th>
        <th>Message</th>
        <th>Detail</th>
        <th>Date</th>
        <th>Photo</th>
        <th colspan="3"></th>
   </tr>
 </thead>
 <tbody>
    <%@user.vehicles.each do |vehicle|%>
    <%vehicle.agreements.each do |agreement|%>
    <tr>
       <td><%= "------" %></td>
       <td><%= agreement.vehicle %></td>
       <td><%= agreement.message %></td>
       <td><%= agreement.detail %></td>
       <td><%= agreement.date %></td>
       <td><%= image_tag vehicle.photo.url, size:30 if vehicle.photo.url %></td>
       
       <td><%= link_to 'Show', vehicle %></td>
       <p><%=agreement.message%></p>
       <%if current_user == vehicle.user%>
         <td><%= link_to 'Edit', edit_vehicle_path(vehicle) %></td>
         <td><%= link_to 'Destroy', vehicle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
       <% end %>
    </tr>
        
    <%end%>  
<%end%>
</tbody>
</table>